# this is for only text based generation and to verify also :)

import random
def checkcaptcha(captcha,user_captcha):
    if captcha == user_captcha:
       return true 
          return False
def Generatecaptcha(n):
    chrs = 'qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890'
    captcha = ""
    while n:
    captcha += chrs[random.randit(0,61)]
    n - = 1
    return captcha
cap_len = int(input("Enter the length of the captcha to be generated"))

captcha = Generatecaptcha(cap_len)
print("GENERATED CAPTCHA :",captcha)

print("ENTER THE ABOVE SHOWED CAPTCHA AS IT IS ")
user_captcha = input()

if checkCaptcha(captcha, usr_captcha):
    print("CAPTCHA Matched")
else:
    print("CAPTCHA Not Matched")


